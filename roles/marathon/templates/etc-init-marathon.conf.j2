# {{ansible_managed}}
description "Marathon scheduler for Mesos"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

script
/usr/bin/marathon \
--http_credentials  "{{mesos_http.user}}:{{mesos_http.password}}" \
--mesos_authentication_principal  "{{mesos_http.user}}" \
--mesos_authentication_secret_file  "/etc/init/marathon-passwd"
end script
